# PPuRI-AI Ultimate - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# LLM API Keys (Required: at least one)
# ============================================
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# Search API Keys (Recommended)
# ============================================
TAVILY_API_KEY=tvly-your-tavily-api-key
BRAVE_API_KEY=your-brave-api-key
SERPER_API_KEY=your-serper-api-key

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://ppuri:your_password@localhost:5432/ppuri_ultimate
POSTGRES_USER=ppuri
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ppuri_ultimate

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

REDIS_URL=redis://localhost:6379/0

QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8002
LOG_LEVEL=INFO
LOG_FORMAT=text

# ============================================
# Security (CHANGE IN PRODUCTION!)
# ============================================
JWT_SECRET_KEY=generate-a-secure-random-string-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# External Services (Optional)
# ============================================
COHERE_API_KEY=your-cohere-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
KIPRIS_API_KEY=your-kipris-api-key
